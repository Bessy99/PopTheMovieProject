<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ListeUtenteFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFilmDaVedere"
                style="@style/TextOnSecondaryTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/film_da_vedere_liste_utente" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaFilmDaVedereRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewFilmVisti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/film_visti_liste_utente"
                style="@style/TextOnSecondaryTheme"
               />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaFilmVistiRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>