<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMovie"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/primaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="75"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/posterImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/eliminaCheckBox"
                android:layout_alignRight="@+id/eliminaCheckBox"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop" />

            <CheckBox
                android:id="@+id/eliminaCheckBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_button"
                android:button="@drawable/ic_icons8_cancel"
                app:buttonTint="@color/secondaryDarkColor" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="23"
            android:layout_marginTop="8dp"
            android:weightSum="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titoloItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:text="Titolo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:lines="1"/>

            <TextView
                android:id="@+id/genereItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="40"
                android:text="genere"
                android:lines="1"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">

            <TextView
                android:id="@+id/durataItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="durata" />

            <ImageButton
                android:id="@+id/buttonVediDettagli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/info_icon"
                android:background="@android:color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
