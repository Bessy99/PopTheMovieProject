<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="100"
        tools:context=".OutOfTheBoxMovieFragment">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMovieOTB"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="8dp">
                <!-- Media -->
                <ImageView
                    android:id="@+id/posterImageViewOTB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cropToPadding="true"
                    />

                <TextView
                    android:id="@+id/titoloTextViewOTB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="title placeholder"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    />
                <TextView
                    android:id="@+id/genereTextViewOTB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="genere placeholder"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    />
                <TextView
                    android:id="@+id/tramaTextViewOTB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="plot placeholder"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="?android:attr/textColorSecondary"
                    />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="20"
            android:weightSum="99">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addVistiButtonOTB"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:text="Visto"
                android:layout_margin="8dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addDaVedereButtonOTB"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:text="Da vedere"
                android:layout_margin="8dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/nextButtonOTB"
                android:layout_width="0dp"
                android:layout_weight="33"
                android:layout_height="wrap_content"
                android:text="Next"
                android:layout_margin="8dp"/>
        </LinearLayout>
    </LinearLayout>
