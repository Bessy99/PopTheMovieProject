<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PopTheMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/raleway_light</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">?colorSecondary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>

    </style>

    <style name="ToolbarTheme">
        <!-- Color used for the title of the Toolbar -->
        <item name="android:textColorPrimary">?colorPrimary</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">?colorPrimary</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/kaushan_script</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="BottomNavigationTheme" >
        <item name= "itemTextColor">?colorPrimary</item>
        <item name="itemIconTint">?colorPrimary</item>
        <item name="itemBackground">?colorSecondary</item>
    </style>

    <style name="TextOnSecondaryTheme" parent="TextOnSecondaryColor">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ClassificaTitleTheme" parent="TextOnSecondaryTheme">
        <item name="android:gravity">center</item>

    </style>

    <style name="ClassificaSottotiliTheme" parent="TextOnSecondaryColor">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextOnSecondaryColor" >
        <item name="android:textColor">?colorPrimary</item>
    </style>

</resources>